/*WAP to draw this pattern
        *  *  *  *  *
       *  *  *  *  *
     *  *  *  *  *
   *  *  *  *  *
 *  *  *  *  * 

*/
#include<iostream>
using namespace std;
int main()
{
    int n,i,j;
    cout<<"Enter the number"<<endl;
    cin>>n;
    for(i=0;i<n;i++)
    {
        for(j=1;j<=(2*n-i);j++)
        {

            if(j<=(n-i))
            {
                cout<<"  ";
            }
            else{
                cout<<" * ";
            }
        }
        cout<<endl;
    } 
    return 0;
}

